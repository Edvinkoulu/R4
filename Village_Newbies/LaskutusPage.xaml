<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Village_Newbies.LaskutusPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Laskutus testi"
                FontSize="Title"
                HorizontalOptions="Center" />

            <Button
                Text="Luo Lasku (Kovakoodattu testi data)"
                Clicked="OnLuoLaskuButtonClicked"
                HorizontalOptions="Center" />

            <Button
                Text="Lähetä sähköposti lasku (simuloitu)"
                Clicked="OnLahetaSahkopostiLaskuButtonClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>