<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Tummaan taustaan sopiva sinisävyinen paletti -->

    <!-- Pääväri: kirkas mutta hillitty sininen, painikkeisiin ja otsikoihin -->
    <Color x:Key="Primary">#4A90E2</Color>
    
    <!-- Vaaleampi sininen: hover-efektit, korostukset -->
    <Color x:Key="PrimaryLight">#72B0F5</Color>
    
    <!-- Korosteväri: hyvin vaalea sininen esim. sekundäärisiin korostuksiin -->
    <Color x:Key="Accent">#A8CFF8</Color>

    <!-- Taustaväri: tumma sinertävä harmaa -->
    <Color x:Key="Secondary">#1C2A38</Color>

    <!-- Tekstivärit: vaalea teksti tummaan taustaan -->
    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#CCCCCC</Color>

    <!-- Reunaväri: vaaleampi harmaa borderiin -->
    <Color x:Key="BorderColor">#555555</Color>

    <!-- Yleisiä neutraaleja sävyjä -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!-- SolidColorBrushit -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource PrimaryLight}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="BorderColorBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

</ResourceDictionary>
