<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Village_Newbies.ViewModels"
             x:Class="Village_Newbies.HallintaPages.HallintaPagePalvelu"
             Title="Lisää palvelu">

    <ScrollView>
        
        <StackLayout Padding="20" Spacing="10">
            <VerticalStackLayout Padding="30" HorizontalOptions="Center">
                <Label Text="Palveluiden Hallinta" FontSize="24"/>
            </VerticalStackLayout>

            <!-- Lista nykyisistä palveluista -->
            <HorizontalStackLayout>
                <Label Text="Nykyiset palvelut" FontSize="20" Margin="0,20,20,0" HorizontalOptions="Start"/>
                <Entry Placeholder="Hae palveluita" Text="{Binding Hakusana}" FontSize="20" Margin="0,20,0,0" />
                <Button Text="Hae" Command="{Binding SearchPalvelutCommand}" FontSize="20" Margin="10,20,0,0" />
                
            </HorizontalStackLayout>

            <CollectionView ItemsSource="{Binding Palvelut}" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="5" Padding="10" BorderColor="LightGray">
                            <StackLayout>
                                <Label Text="{Binding Nimi}" FontAttributes="Bold"/>
                                <Label Text="{Binding Kuvaus}" FontSize="Small"/>
                                <Label Text="{Binding Hinta}" FontSize="Small" TextColor="DarkGreen"/>

                                <StackLayout Orientation="Horizontal" Spacing="10">
                                    <Button Text="Muokkaa"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.LoadPalveluForEditCommand}"
                                            CommandParameter="{Binding}" />

                                    <Button Text="Poista"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeletePalveluCommand}"
                                            CommandParameter="{Binding}" />
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Lomakekentät -->
            <Entry Placeholder="Palvelun nimi"
                   Text="{Binding UusiPalvelu.Nimi}" />

            <Entry Placeholder="Palvelun kuvaus"
                   Text="{Binding UusiPalvelu.Kuvaus}" />

            <Entry Placeholder="Hinta"
                   Keyboard="Numeric"
                   Text="{Binding UusiPalvelu.Hinta}" />

            <Entry Placeholder="ALV (%)"
                   Keyboard="Numeric"
                   Text="{Binding UusiPalvelu.Alv}" />

            <!--ALUEPICKER!!!!!!!-->
            <Picker x:Name="AluePicker"
                    Title="Valitse alue"
                    SelectedItem="{Binding SelectedAlue}"
                    ItemsSource="{Binding AlueList}">
                <Picker.ItemDisplayBinding>
                    <Binding Path="alue_nimi"/>
                </Picker.ItemDisplayBinding>
            </Picker>

            <HorizontalStackLayout>
            <!-- Lisää tai päivitä -napit -->
            <Button Text="Lisää palvelu"
                    Command="{Binding AddPalveluCommand}"
                    IsVisible="{Binding IsAdding}" 
                    FontSize="20" Margin="10,20,0,0" />

            <Button Text="Tallenna muokkaus"
                    Command="{Binding UpdatePalveluCommand}"
                    IsVisible="{Binding IsEditing}" 
                    FontSize="20" Margin="10,20,0,0" />
            <Button Text="Tyhjennä lomake" Command="{Binding ClearFormCommand}" FontSize="20" Margin="10,20,0,0" />
            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentPage>