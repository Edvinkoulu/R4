<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Village_Newbies.ViewModels"
    x:Class="Village_Newbies.HallintaPages.HallintaPagePosti"
    x:DataType="vm:PostiViewModel"
    Title="Postinumero">

    <VerticalStackLayout Padding="24" Spacing="18">
        <Entry Placeholder="Postinumero (esim. 00100)"
               Keyboard="Numeric"
               Text="{Binding Postinumero}" />

        <Entry Placeholder="Toimipaikka (kaupunki)"
               Text="{Binding Toimipaikka}" />

        <Button Text="Tallenna" Command="{Binding TallennaCommand}" />
    </VerticalStackLayout>
</ContentPage>