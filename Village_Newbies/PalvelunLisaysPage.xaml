<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Village_Newbies.PalvelunLisaysPage"
             Title="Lisää palvelu">

<ScrollView>
    <StackLayout Padding="20" Spacing="20">

        <Label Text="Palvelun lisäys (Databasessa pitää olla testidataa että toimii)" FontSize="24" HorizontalOptions="Center" />

        <!-- Entryt-->
        <Entry x:Name="nimiEntry" Placeholder="Palvelun nimi" HorizontalOptions="Center" MinimumWidthRequest="200"/>
        <Entry x:Name="kuvausEntry" Placeholder="Palvelun kuvaus" HorizontalOptions="Center" MinimumWidthRequest="200"/>
        <Entry x:Name="hintaEntry" Placeholder="Hinta" Keyboard="Numeric" HorizontalOptions="Center" MinimumWidthRequest="200"/>
        <Entry x:Name="alvEntry" Placeholder="ALV (%)" Keyboard="Numeric" HorizontalOptions="Center" MinimumWidthRequest="200"/>
        <Picker x:Name="aluePicker" Title="Valitse alue" HorizontalOptions="Center" MinimumWidthRequest="200" />


        <!-- Tallenna-nappi -->
        <Button Text="Tallenna"
                Clicked="OnTallennaButtonClicked" 
                HorizontalOptions="Center"
                 MinimumWidthRequest="200"/>

        <!-- Otsikko listalle -->
        <Label Text="Nykyiset palvelut"
               FontSize="20"
               Margin="0,20,0,0"/>

        <!-- Palvelulista -->
        <CollectionView x:Name="palvelutView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" Padding="10" BorderColor="LightGray">
                        <StackLayout>
                            <Label Text="{Binding Nimi}" FontAttributes="Bold"/>
                            <Label Text="{Binding Kuvaus}" FontSize="Small"/>
                            <Label Text="{Binding Hinta}" FontSize="Small" TextColor="DarkGreen"/>
                            <Button Text="Poista" Clicked="OnPoistaButtonClicked" CommandParameter="{Binding}"/>
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </StackLayout>
</ScrollView>
</ContentPage>
